{

  "manifest_version": 2,
  "name": "SmartWrap",
  "description": "Smartwrap Extension for Firefox",
  "version": "1.0",

  "icons": {
    "24": "images/sw24.png"
  },

  "permissions": [
    "storage"
  ],

  "sidebar_action": {
    "default_icon": "images/sw24.png",
    "default_title" : "SmartWrap",
    "default_panel": "pages/smartwrap.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "scripts/smartwrap-processdom.js"]
    }
  ],

  "default_locale":"en"
}
